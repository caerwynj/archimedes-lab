BEGIN {line = 1}

/0000/ && NF > 1 && !/OPT pass/{
        mc = substr($0,11,8)

        i = match($0, /\.[a-z0-9]+/)
        label = substr($0, RSTART, RLENGTH)
        if (label) 
                label = "`" label "`"

        instr = substr($0, 30)
        sub(/;.*$/, "", instr)
        sub(/ +$/, "", instr)

        i = match($0, /;.*$/)
        comment = substr($0, RSTART, RLENGTH)
        sub(/^; */, "", comment)

        i = index(instr, " ")
        args = substr(instr, i+1)
        instr = substr(instr, 0, i-1)
             
        printf "|*%02d*|`%s`|%s|`%s`|`%s`|%s|\n", line, mc, label, instr, args, comment
        line += 1
}
